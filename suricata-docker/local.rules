 ---------- Canary .216 (SSH/HTTP/FTP) ----------
# Alerte dès le SYN (tentative)
alert tcp any any -> 192.168.69.216 22 (msg:"HONEY SSH SYN to canary-216:22"; flow:to_server; flags:S; classtype:attempted-recon; sid:2162201; rev:1; metadata:service ssh,canary; )
alert tcp any any -> 192.168.69.216 80 (msg:"HONEY HTTP SYN to canary-216:80"; flow:to_server; flags:S; classtype:attempted-recon; sid:2168001; rev:1; metadata:service http,canary; )
alert tcp any any -> 192.168.69.216 21 (msg:"HONEY FTP SYN to canary-216:21"; flow:to_server; flags:S; classtype:attempted-recon; sid:2162101; rev:1; metadata:service ftp,canary; )

