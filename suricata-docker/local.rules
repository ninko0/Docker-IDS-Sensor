alert tcp any any -> 192.168.69.216 80 (msg:"HONEY HTTP established to canary-216"; flow:to_server,established; app-layer-protocol:http; classtype:attempted-recon; sid:2168002; rev:1; metadata:service http,canary; )
alert tcp any any -> 192.168.69.216 21 (msg:"HONEY FTP control established to canary-216"; flow:to_server,established; app-layer-protocol:ftp; classtype:attempted-recon; sid:2162102; rev:1; metadata:service ftp,canary; )

